<div class="py-5" style="background:#fff8f0;">
  <div class="container">
    <div class="mx-auto" style="max-width: 540px;">

      <% if flash[:alert].present? %>
        <div class="alert alert-danger text-center"><%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice].present? %>
        <div class="alert alert-success text-center"><%= flash[:notice] %></div>
      <% end %>

      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4 p-md-5">

          <h2 class="h4 fw-bold text-center mb-4" style="color:#EF8134;">新規登録</h2>

        
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with(model: resource,
                        as: resource_name,
                        url: registration_path(resource_name),
                        local: true) do |f| %>

            <div class="mb-3">
              <%= f.label :name, "名前", class: "form-label" %>
              <%= f.text_field :name, class: "form-control form-control-lg",
                               autocomplete: "name", placeholder: "例）のんべえ太郎" %>
              <div class="form-text text-muted">2〜20文字・重複不可</div>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, class: "form-control form-control-lg",
                                autocomplete: "email", placeholder: "you@example.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label" %>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  <% if @minimum_password_length %>
                    最小 <%= @minimum_password_length %> 文字
                  <% end %>
                </small>
              </div>
              <%= f.password_field :password, class: "form-control form-control-lg",
                                   autocomplete: "new-password", placeholder: "••••••••" %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control form-control-lg",
                                   autocomplete: "new-password", placeholder: "もう一度入力" %>
            </div>

            <div class="d-grid">
              <%= f.submit "登録する", class: "btn btn-orange btn-lg rounded-3" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="d-flex flex-column gap-2 text-center">
            <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn btn-coral rounded-3" %>
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>

      <div class="text-center mt-3">
        <%= link_to "トップへ戻る", root_path, class: "text-muted text-decoration-none" %>
      </div>
    </div>
  </div>
</div>