<div class="d-flex justify-content-center align-items-start" style="min-height: 80vh;">
  <div class="container py-4" style="max-width: 900px;">

    <% if notice %>
      <div class="alert alert-success text-center"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger text-center"><%= alert %></div>
    <% end %>

    <h1 class="h4 mb-4 text-center">ジャンル管理</h1>

    <div class="mb-3 text-end">
      <%= link_to "＋ 新規追加", new_admin_genre_path, class: "btn btn-primary" %>
    </div>

    <div class="table-responsive">
      <table class="table table-striped align-middle text-center mb-0">
        <thead class="table-light">
          <tr>
            <th style="width: 80px;">ID</th>
            <th>ジャンル名</th>
            <th style="width: 220px;">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |g| %>
            <tr>
              <td class="text-muted"><%= g.id %></td>
              <td><%= g.name %></td>
              <td>
                <div class="btn-group btn-group-sm" role="group" aria-label="actions">
                  <%= link_to "編集", edit_admin_genre_path(g), class: "btn btn-sm btn-outline-secondary me-2" %>
                  <%= link_to "削除", admin_genre_path(g),
                        class: "btn btn-sm btn-outline-danger",
                        data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
                </div>
              </td>
            </tr>
          <% end %>

          <% if @genres.blank? %>
            <tr>
              <td colspan="3" class="text-muted py-4">ジャンルがありません。</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-4 text-center">
      <%= link_to "← ダッシュボードに戻る", admin_root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>