<div class="d-flex justify-content-center align-items-start" style="min-height: 80vh;">
  <div class="container py-4" style="max-width: 600px;">
    <h1 class="h4 mb-4 text-center">
      <%= action_name == "new" ? "ジャンル追加" : "ジャンル編集" %>
    </h1>

    <%= form_with model: [:admin, @genre], local: true do |f| %>
      <div class="mb-3">
        <%= f.label :name, "ジャンル名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= f.submit (action_name == "new" ? "追加する" : "更新する"),
            class: "btn btn-primary" %>
        <%= link_to "戻る", admin_genres_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "← ダッシュボードに戻る", admin_root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
