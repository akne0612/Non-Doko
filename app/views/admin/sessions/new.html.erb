<div class="d-flex justify-content-center align-items-center bg-primary" style="min-height: 100vh;">
  <div class="bg-white p-4 rounded shadow" style="max-width: 420px; width: 100%;">
    <h1 class="h4 text-center mb-4 text-primary">管理者ログイン</h1>

    <%= form_with scope: resource_name, url: session_path(resource_name), local: true do |f| %>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
