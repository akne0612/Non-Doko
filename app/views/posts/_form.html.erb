<div class="container py-4">
  <div class="col-12 col-md-8 col-lg-6 mx-auto">

    <%= form_with(model: post, local: true) do |f| %>
      <% if post.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :title, "タイトル", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "例）仕事帰りに寄った居酒屋" %>
      </div>

      <div class="mb-3">
        <%= f.label :store_name, "店名（検索で自動入力可）", class: "form-label" %>
        <%= f.text_field :store_name, id: "store_name_input", class: "form-control", placeholder: "店名を入力 or 上の検索で選択" %>
      </div>

      <div class="mb-3">
        <%= f.label :body, "本文", class: "form-label" %>
        <%= f.text_area :body, rows: 4, class: "form-control", placeholder: "感想やおすすめポイントなど" %>
      </div>

      <div class="mb-3">
        <%= f.label :genre_id, "ジャンル", class: "form-label" %>
        <%= f.collection_select :genre_id, (@genres || Genre.all), :id, :name,
              { prompt: "ジャンルを選択してください" },
              { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= f.label :address, "住所（検索で自動入力可）", class: "form-label" %>
        <%= f.text_field :address, id: "address-input", class: "form-control", placeholder: "住所を入力 or 上の検索で選択" %>
      </div>

      <%= f.hidden_field :latitude,  id: "latitude" %>
      <%= f.hidden_field :longitude, id: "longitude" %>

      <div class="mb-3">
        <%= f.label :image, "画像", class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "投稿", class: "btn btn-primary px-4" %>
      </div>
    <% end %>

  </div>
</div>
