<div id="like_button_<%= post.id %>">
  <% if user_signed_in? %>
    <% if post.likers.exists?(current_user.id) %>
      <%= button_to "♥ #{post.likes_count}",
            post_like_path(post, post.likes.find_by(user_id: current_user.id)),
            method: :delete,
            class: "btn btn-outline-danger btn-sm" %>
    <% else %>
      <%= button_to "♡ #{post.likes_count}",
            post_likes_path(post),
            method: :post,
            class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  <% else %>
    <span>♡ <%= post.likes_count %></span>
  <% end %>
</div>