<%= render 'map_box' %>  <!-- マップを上に表示 -->
<h1>投稿を編集</h1>

<%= render 'form', post: @post %>

<div class="mt-3 d-flex gap-2">
  <%= link_to '戻る', post_path(@post), class: "btn btn-secondary" %>
  <%= button_to '削除', post_path(@post),
        method: :delete,
        data: { confirm: '本当に削除しますか？' },
        class: "btn btn-outline-danger" %>
</div>

