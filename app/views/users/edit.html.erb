<div class="container" style="max-width: 720px;">
  <h1 class="h4 mb-3">プロフィール編集</h1>

  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, html: { multipart: true } do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <p class="mb-1"><strong><%= @user.errors.count %></strong> 件のエラーがあります：</p>
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :avatar, "アイコン画像" %><br>
      <% if @user.avatar&.attached? %>
        <%= image_tag @user.avatar, class: "rounded-circle border mb-2", alt: "avatar", size: "80x80" %><br>
      <% end %>
      <%= f.file_field :avatar, accept: "image/*" %>
    </div>

    <div class="mb-3">
      <%= f.label :name, "ユーザー名（URL/表示用）" %>
      <%= f.text_field :name, class: "form-control" %>
      <div class="form-text">2〜20文字。英数字と _ のみ推奨。</div>
    </div>

    <% if @user.respond_to?(:bio) %>
      <div class="mb-3">
        <%= f.label :bio, "自己紹介" %>
        <%= f.text_area :bio, rows: 5, class: "form-control" %>
      </div>
    <% end %>

    <% if @user.respond_to?(:location) %>
      <div class="mb-3">
        <%= f.label :location, "場所" %>
        <%= f.text_field :location, class: "form-control" %>
      </div>
    <% end %>

    <% if @user.respond_to?(:website) %>
      <div class="mb-3">
        <%= f.label :website, "ウェブサイト" %>
        <%= f.url_field :website, class: "form-control", placeholder: "https://example.com" %>
      </div>
    <% end %>

    <div class="d-flex gap-2">
      <%= f.submit "保存する", class: "btn btn-primary" %>
      <%= link_to "キャンセル", @user, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
